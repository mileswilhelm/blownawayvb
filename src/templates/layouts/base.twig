<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>{{ page.title }}</title>
		<meta name="description" content="{{ page.description | e('html_attr') }}"> {% block meta %}{% endblock %}
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
    <link rel="manifest" href="/site.webmanifest">

		{% block styles %}
			<link rel="preconnect" href="https://fonts.googleapis.com">
			<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
			<link href="https://fonts.googleapis.com/css2?family=Figtree:wght@400;800&display=swap" rel="stylesheet">
			<link rel="stylesheet" type="text/css" href="{{ puppy.assetUrl('main.css') }}">
			<link rel="stylesheet" type="text/css" href="{{ puppy.assetUrl('output.css') }}">
		{% endblock %}

		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-75T8WG4SXE"></script>
		<script>
			window.dataLayer = window.dataLayer || [];
      function gtag() {
      dataLayer.push(arguments);
      }
      gtag('js', new Date());

      gtag('config', 'G-75T8WG4SXE');
		</script>
	</head>
	<body>
		<div class="site-content relative min-h-screen"> {% block content %}{% endblock %}
			</div>

			{% block scripts %}
				<script type="text/javascript" src="{{ puppy.assetUrl('vendor.js') }}"></script>
				<script type="text/javascript" src="{{ puppy.assetUrl('main.js') }}"></script>
			{% endblock %}
		</body>
	</html>
